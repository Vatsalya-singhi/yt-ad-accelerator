{
    "name": "yt-ad-accelerator",
    "short_name": "YT ad accelerator",
    "description": "The chrome tool improves your YouTube viewing by automating ad skipping, muting & playback acceleration without blocking ad.",
    "version": "1.2.0",
    "author": "vatsalya.singhi@gmail.com",
    "manifest_version": 3,
    "action": {
        "default_title": "YT ad accelerator",
        "default_popup": "./src/index.html",
        "default_locale": "en",
        "default_icon": {
            "16": "./icons/icon16.png",
            "32": "./icons/icon32.png",
            "48": "./icons/icon48.png",
            "128": "./icons/icon128.png"
        }
    },
    "icons": {
        "16": "./icons/icon16.png",
        "32": "./icons/icon32.png",
        "48": "./icons/icon48.png",
        "128": "./icons/icon128.png"
    },
    "background": {
        "service_worker": "./src/background.js"
    },
    "permissions": [
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "http://www.youtube.com/watch*",
        "https://www.youtube.com/watch*"
    ]
}